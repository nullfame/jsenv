{
  "source": "./src",
  "excludes": [
    "node_modules"
  ],
  "destination": "./docs",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "brand": {
          "title": "My Package Library"
        },
        "test": {
          "source": "./src",
          "interfaces": [
            "describe",
            "it",
            "context",
            "suite",
            "test"
          ],
          "includes": [
            "(spec|Spec|test|Test)\\.js$"
          ],
          "excludes": [
            "\\.config\\.js$"
          ]
        }
      }
    }
  ]
}
